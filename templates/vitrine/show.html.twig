{% extends 'base.html.twig' %}

{% block title %}Vitrine #{{ vitrine.id }}{% endblock %}

{% block body %}
<div class="container py-4">

  {# Lien back vers le membre propriétaire si dispo #}
  {% if vitrine.owner %}
    <a href="{{ path('app_member_show', { id: vitrine.owner.id }) }}"
       class="btn btn-outline-secondary btn-sm mb-3">
      ← Retour au membre
    </a>
  {% else %}
    <a href="{{ path('vitrine_index') }}" class="btn btn-outline-secondary btn-sm mb-3">
      ← Retour à la liste des vitrines
    </a>
  {% endif %}

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Vitrine #{{ vitrine.id }}</h1>
    <span class="text-muted">
      Propriétaire :
      {% if vitrine.owner %}
        {{ vitrine.owner.email }}
      {% else %}
        <em>inconnu</em>
      {% endif %}
    </span>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="h5">Description</h2>
      <p class="mb-0">
        {{ vitrine.description ?: 'Aucune description' }}
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h5 mb-0">Figures dans cette vitrine</h2>

    {# Bouton d'ajout contextuel - on le branche en 14.2 #}
    <a class="btn btn-sm btn-primary"
       href="{{ path('app_figure_new', { id: vitrine.id }) }}">
      + Ajouter une nouvelle figure
    </a>
  </div>

  {% if vitrine.figures is empty %}
    <div class="alert alert-info mt-3">
      Aucune figure dans cette vitrine pour le moment.
    </div>
  {% else %}
    <div class="table-responsive mt-3">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for figure in vitrine.figures %}
            <tr>
              <td>{{ figure.id }}</td>
              <td>{{ figure.name }}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('app_figure_show', { id: figure.id }) }}">
                  Voir
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}

</div>
{% endblock %}
