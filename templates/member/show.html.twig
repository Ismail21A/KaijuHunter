{% extends 'base.html.twig' %}

{% block title %}Membre #{{ member.id }}{% endblock %}

{% block body %}
<div class="container py-4">
  <a href="{{ path('app_member_index') }}" class="btn btn-outline-secondary btn-sm mb-3">
    ← Retour à la liste des membres
  </a>

  <h1 class="h3 mb-3">Profil du membre</h1>

  <dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">{{ member.id }}</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">{{ member.email }}</dd>
  </dl>

  <hr>

  <h2 class="h5 mb-3">Mon inventaire (vitrine)</h2>

  {% if vitrine %}
    <p>
      Cette vitrine est liée à ce membre.<br>
      <a class="btn btn-primary btn-sm mt-2"
         href="{{ path('vitrine_show', { id: vitrine.id }) }}">
        Voir ma vitrine
      </a>
    </p>
  {% else %}
    <div class="alert alert-warning">
      Ce membre n'a pas encore de vitrine associée.
    </div>
  {% endif %}

  <hr class="my-4">

  <h2 class="h5 mb-3">Mes arènes</h2>

  <div class="d-flex justify-content-between align-items-center mb-2">
    <span class="text-muted">Arenas créées par {{ member.email }}</span>
    <a class="btn btn-sm btn-primary"
       href="{{ path('app_arena_new', { id: member.id }) }}">
      + Créer une nouvelle Arena
    </a>
  </div>

  {% if member.arenas is empty %}
    <div class="alert alert-info">Aucune arena pour l’instant.</div>
  {% else %}
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Publique ?</th>
            <th># Figures</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for arena in member.arenas %}
            <tr>
              <td>{{ arena.id }}</td>
              <td>{{ arena.description }}</td>
              <td>
                {% if arena.publie %}
                  <span class="badge bg-success">Oui</span>
                {% else %}
                  <span class="badge bg-secondary">Non</span>
                {% endif %}
              </td>
              <td>{{ arena.figures|length }}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('app_arena_show', { id: arena.id }) }}">
                  Voir
                </a>
                <a class="btn btn-sm btn-outline-primary"
                   href="{{ path('app_arena_edit', { id: arena.id }) }}">
                  Modifier
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
{% endblock %}
