{% extends 'base.html.twig' %}

{% block title %}Mon espace — {{ member.email }}{% endblock %}

{% block body %}
<div class="container py-4">

  {# En-tête / breadcrumb #}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
          <li class="breadcrumb-item">
            <a href="{{ path('home') }}">Accueil</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            Mon espace
          </li>
        </ol>
      </nav>
      <h1 class="h3 mb-0">Mon espace — {{ member.email }}</h1>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
      <span class="badge bg-danger">Admin</span>
    {% else %}
      <span class="badge bg-primary">Membre</span>
    {% endif %}
  </div>

  <div class="row g-4">

    {# Carte profil #}
    <div class="col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 mb-3">Mon profil</h2>

          <p class="mb-1">
            <strong>Email :</strong><br>
            {{ member.email }}
          </p>

          <p class="text-muted small mb-3">
            Cet espace regroupe vos vitrines, vos figures et vos arenas
            dans l’univers KaijuHunter.
          </p>

          <a href="{{ path('app_arena_index') }}"
             class="btn btn-outline-secondary btn-sm">
            Voir les Arenas publiques
          </a>
        </div>
      </div>
    </div>

    {# Vitrine + Arenas #}
    <div class="col-lg-8">
      <div class="row g-4">

        {# Ma vitrine #}
        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h2 class="h5 mb-0">Ma vitrine</h2>
            </div>
            <div class="card-body">
              {% if vitrine %}
                <p class="mb-2">
                  {{ vitrine.description ?: 'Sans description' }}
                </p>
                <p class="mb-3">
                  <span class="badge bg-secondary">
                    {{ vitrine.figures|length }} figures
                  </span>
                </p>
                <div class="d-flex gap-2">
                  <a class="btn btn-sm btn-outline-secondary"
                     href="{{ path('vitrine_show', { id: vitrine.id }) }}">
                    Voir ma vitrine
                  </a>
                  <a class="btn btn-sm btn-primary"
                     href="{{ path('app_figure_new', { id: vitrine.id }) }}">
                    + Ajouter une figure
                  </a>
                </div>
              {% else %}
                <div class="alert alert-warning mb-0">
                  Vous n'avez pas encore de vitrine associée.
                </div>
              {% endif %}
            </div>
          </div>
        </div>

        {# Mes arenas #}
        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h2 class="h5 mb-0">Mes Arenas</h2>
              <a href="{{ path('app_arena_new', { id: member.id }) }}"
                 class="btn btn-sm btn-primary">
                Nouvelle Arena
              </a>
            </div>
            <div class="card-body">
              {% if arenas is empty %}
                <p class="text-muted mb-0">
                  Aucune Arena pour le moment. Créez-en une pour mettre en scène vos figures.
                </p>
              {% else %}
                <div class="table-responsive">
                  <table class="table table-sm align-middle mb-0">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Statut</th>
                        <th>Figures</th>
                        <th class="text-end">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for arena in arenas %}
                        <tr>
                          <td class="text-muted">{{ arena.id }}</td>
                          <td>{{ arena.description }}</td>
                          <td>
                            {% if arena.publie %}
                              <span class="badge bg-success">Publique</span>
                            {% else %}
                              <span class="badge bg-secondary">Privée</span>
                            {% endif %}
                          </td>
                          <td>
                            <span class="badge bg-secondary">
                              {{ arena.figures|length }} figures
                            </span>
                          </td>
                          <td class="text-end">
                            <a href="{{ path('app_arena_show', { id: arena.id }) }}"
                               class="btn btn-sm btn-outline-secondary">
                              Voir
                            </a>
                            <a href="{{ path('app_arena_edit', { id: arena.id }) }}"
                               class="btn btn-sm btn-outline-primary">
                              Modifier
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              {% endif %}
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

</div>
{% endblock %}
