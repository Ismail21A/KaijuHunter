{% extends 'base.html.twig' %}

{% block title %}{{ figure.name }}{% endblock %}

{% block body %}
<div class="container py-4">
  <a href="{{ path('figure_index') }}" class="btn btn-outline-secondary btn-sm mb-3">← Retour</a>

  <h1 class="h3 mb-3">{{ figure.name }}</h1>
  <dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">{{ figure.id }}</dd>

    <dt class="col-sm-2">Nom</dt>
    <dd class="col-sm-10">{{ figure.name }}</dd>

    <dt class="col-sm-2">Vitrine</dt>
    <dd class="col-sm-10">
      {% if figure.vitrine %}
        <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}">Vitrine #{{ figure.vitrine.id }}</a>
      {% else %}
        —
      {% endif %}
    </dd>
  </dl>
</div>
{% endblock %}