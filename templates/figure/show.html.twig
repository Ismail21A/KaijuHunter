{% extends 'base.html.twig' %}

{% block title %}Figure — {{ figure.name }}{% endblock %}

{% block body %}
<div class="mb-3 d-flex gap-2">
    {% if figure.vitrine %}
        <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}"
           class="btn btn-outline-secondary btn-sm">
            ← Retour à la vitrine
        </a>
    {% endif %}
    <a href="{{ path('app_figure_index') }}" class="btn btn-outline-secondary btn-sm">
        ← Back to list
    </a>
</div>

<h1 class="h3 mb-3">Figure — {{ figure.name }}</h1>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">Details</div>
            <div class="card-body">
                <table class="table">
                    <tr><th>Id</th><td>{{ figure.id }}</td></tr>
                    <tr><th>Name</th><td>{{ figure.name }}</td></tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-header">Image</div>
            <div class="card-body d-flex align-items-center justify-content-center">

                {% if figure.imageName %}
                    <img 
                        src="/uploads/figures/{{ figure.imageName }}" 
                        alt="{{ figure.name }}"
                        class="img-fluid rounded"
                        style="max-height:260px;"
                    >
                {% else %}
                    <em class="text-muted">No image available</em>
                {% endif %}

            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_figure_edit', { id: figure.id }) }}" class="btn btn-primary">Edit</a>
    {{ include('figure/_delete_form.html.twig') }}
</div>

{% endblock %}
