{% extends 'base.html.twig' %}

{% block title %}Figure — {{ figure.name }}{% endblock %}

{% block body %}
<div class="container py-4">

  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="{{ path('home') }}">Accueil</a>
      </li>

      {% if figure.vitrine %}
        <li class="breadcrumb-item">
          <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}">
            Vitrine #{{ figure.vitrine.id }}
          </a>
        </li>
      {% endif %}

      <li class="breadcrumb-item active" aria-current="page">
        {{ figure.name }}
      </li>
    </ol>
  </nav>

  <h1 class="h3 mb-4">{{ figure.name }}</h1>

  <div class="row g-4">

    <div class="col-md-6">
      <div class="card shadow-sm">
        {% if figure.imageName %}
          <img 
            src="/uploads/figures/{{ figure.imageName }}" 
            alt="{{ figure.name }}"
            class="img-fluid rounded"
            style="width:100%; max-height:380px; object-fit:cover;"
          >
        {% else %}
          <div class="d-flex align-items-center justify-content-center bg-light"
               style="height:380px;">
            <span class="text-muted">Aucune image disponible</span>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">

          <h2 class="h5 mb-3">Détails</h2>

          <table class="table table-sm">
            <tr><th>ID</th><td>{{ figure.id }}</td></tr>
            <tr><th>Nom</th><td>{{ figure.name }}</td></tr>
          </table>

          <div class="mt-auto pt-3 d-flex gap-2">
            {% if figure.vitrine %}
              <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}"
                 class="btn btn-outline-secondary">
                Retour à la vitrine
              </a>
            {% endif %}

            <a href="{{ path('app_figure_edit', { id: figure.id }) }}"
               class="btn btn-primary">
              Modifier
            </a>

            {{ include('figure/_delete_form.html.twig') }}
          </div>

        </div>
      </div>
    </div>

  </div>

</div>
{% endblock %}
