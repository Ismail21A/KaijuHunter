{% extends 'base.html.twig' %}

{% block title %}Figures{% endblock %}

{% block body %}
<div class="container py-4">
  <h1 class="h3 mb-3">Toutes les figures</h1>

  {% if figures is empty %}
    <div class="alert alert-info">Aucune figure trouv√©e.</div>
  {% else %}
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Vitrine</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for figure in figures %}
            <tr>
              <td>{{ figure.id }}</td>
              <td>{{ figure.name }}</td>
              <td>
                {% if figure.vitrine %}
                  Vitrine #{{ figure.vitrine.id }}
                {% else %}
                  <em>aucune</em>
                {% endif %}
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('app_figure_show', { id: figure.id }) }}">
                  Voir
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
{% endblock %}
