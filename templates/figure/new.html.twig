{% extends 'base.html.twig' %}

{% block title %}Nouvelle figure{% endblock %}

{% block body %}
<div class="container py-4">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_figure_index') }}">Figures</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle figure</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h4 mb-1">
                        <i class="bi bi-plus-circle me-1"></i>
                        Nouvelle figure
                    </h1>
                    <p class="text-muted small mb-0">
                        Ajoutez une nouvelle figure à votre vitrine.
                    </p>
                </div>

                {% if figure.vitrine %}
                    <div class="text-end small">
                        <div class="text-muted">Vitrine</div>
                        <div>
                            <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}">
                                #{{ figure.vitrine.id }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    {{ include('figure/_form.html.twig') }}
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm">
                    ← Retour
                </a>
                <a href="{{ path('app_figure_index') }}" class="btn btn-link btn-sm text-muted">
                    Voir toutes les figures
                </a>
            </div>

        </div>
    </div>

</div>
{% endblock %}
