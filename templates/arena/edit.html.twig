{% extends 'base.html.twig' %}

{% block title %}Modifier Arena #{{ arena.id }}{% endblock %}

{% block body %}
<div class="container py-4">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_arena_index') }}">Arenas</a></li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_arena_show', { id: arena.id }) }}">
                    Arena #{{ arena.id }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h4 mb-1">
                        <i class="bi bi-pencil-square me-1"></i>
                        Modifier l’Arena
                    </h1>
                    <p class="text-muted small mb-0">
                        Ajustez la description, le statut public/privé et les figures associées.
                    </p>
                </div>

                {% if arena.owner %}
                    <div class="text-end small">
                        <div class="text-muted">Propriétaire</div>
                        <div>{{ arena.owner.email }}</div>
                    </div>
                {% endif %}
            </div>

            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    {{ include('arena/_form.html.twig', { 'button_label': 'Mettre à jour' }) }}
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_arena_show', { id: arena.id }) }}" class="btn btn-outline-secondary btn-sm">
                    ← Retour à l’Arena
                </a>
                <div>
                    {{ include('arena/_delete_form.html.twig') }}
                </div>
            </div>

        </div>
    </div>

</div>
{% endblock %}
