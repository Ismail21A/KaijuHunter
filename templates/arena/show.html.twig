{% extends 'base.html.twig' %}

{% block title %}Arena #{{ arena.id }}{% endblock %}

{% block body %}
<div class="container py-4">

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_arena_index') }}">Arenas</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Arena #{{ arena.id }}
            </li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Arena #{{ arena.id }}</h1>

        {% if arena.publie %}
            <span class="badge bg-success">Publique</span>
        {% else %}
            <span class="badge bg-secondary">Priv√©e</span>
        {% endif %}
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="h5">Description</h2>
            <p class="mb-0">{{ arena.description }}</p>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="h5 mb-0">Figures dans cette Arena</h2>

        {% if app.user and (is_granted('ROLE_ADMIN') or arena.owner == app.user) %}
            <a href="{{ path('app_arena_edit', { id: arena.id }) }}"
               class="btn btn-sm btn-primary">
                Modifier l'arena
            </a>
        {% endif %}
    </div>

    {% if arena.figures is empty %}
        <div class="alert alert-info mt-3">
            Aucune figure dans cette arena.
        </div>
    {% else %}

        <div class="row g-4 mt-2">
            {% for figure in arena.figures %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">

                        {% if figure.imageName %}
                            <img src="/uploads/figures/{{ figure.imageName }}"
                                 class="card-img-top"
                                 style="height:180px; object-fit:cover;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center bg-light"
                                 style="height:180px;">
                                <span class="text-muted small">Aucune image</span>
                            </div>
                        {% endif %}

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">{{ figure.name }}</h5>

                            <a href="{{ path('app_arena_figure_show', {
                                arena_id: arena.id,
                                figure_id: figure.id
                            }) }}"
                               class="btn btn-sm btn-outline-primary mt-auto">
                                Voir
                            </a>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}

</div>
{% endblock %}
