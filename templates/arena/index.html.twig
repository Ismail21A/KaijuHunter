{% extends 'base.html.twig' %}

{% block title %}Arenas{% endblock %}

{% block body %}
<div class="container py-4">
    
    <h1 class="h3 mb-4">Arenas</h1>

    {% if arenas is empty %}
        <div class="alert alert-info">
            Aucune arena disponible.
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Description</th>
                            <th>Statut</th>
                            <th class="text-end">Voir</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for arena in arenas %}
                            <tr>
                                <td class="text-muted">{{ arena.id }}</td>
                                <td>{{ arena.description }}</td>
                                <td>
                                    {% if arena.publie %}
                                        <span class="badge bg-success">Publique</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Priv√©e</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       href="{{ path('app_arena_show', {'id': arena.id}) }}">
                                        Voir
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
