{% extends 'base.html.twig' %}

{% block title %}Arenas publiques{% endblock %}

{% block body %}
<div class="container py-4">

    {# Breadcrumb #}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Arenas</li>
        </ol>
    </nav>

    <h1 class="h3 mb-4">Arenas</h1>

    {% if arenas is empty %}
        <div class="alert alert-info">
            Aucune arena disponible.
        </div>
    {% else %}

        <div class="row g-4">
            {% for arena in arenas %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">{{ arena.description }}</h5>

                            <span class="mb-2">
                                {% if arena.publie %}
                                    <span class="badge bg-success">Publique</span>
                                {% else %}
                                    <span class="badge bg-secondary">Priv√©e</span>
                                {% endif %}
                            </span>

                            <a href="{{ path('app_arena_show', { id: arena.id }) }}"
                               class="btn btn-outline-primary btn-sm mt-auto">
                                Voir
                            </a>

                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}

</div>
{% endblock %}
