{% extends 'base.html.twig' %}

{% block title %}Figure — {{ figure.name }}{% endblock %}

{% block body %}
<div class="container py-4">

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_arena_index') }}">Arenas</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_arena_show', { id: arena.id }) }}">
                    Arena #{{ arena.id }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Figure : {{ figure.name }}
            </li>
        </ol>
    </nav>

    <h1 class="h3 mb-4">Figure — {{ figure.name }}</h1>

    <div class="row g-4">
        
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                {% if figure.imageName %}
                    <img src="/uploads/figures/{{ figure.imageName }}"
                         alt="{{ figure.name }}"
                         class="card-img-top object-fit-cover"
                         style="height:300px; object-fit:cover;">
                {% else %}
                    <div class="d-flex align-items-center justify-content-center bg-light"
                         style="height:300px;">
                        <span class="text-muted">Aucune image</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">

                    <h5 class="card-title mb-3">Informations</h5>

                    <table class="table table-sm">
                        <tr>
                            <th>ID</th>
                            <td>{{ figure.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ figure.name }}</td>
                        </tr>
                    </table>

                    <hr>

                    <h6 class="fw-bold">Vitrine d'origine</h6>
                    {% if figure.vitrine %}
                        <p class="mb-2">
                            <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}">
                                Vitrine #{{ figure.vitrine.id }}
                            </a>
                        </p>
                    {% else %}
                        <p class="text-muted">Aucune vitrine associée.</p>
                    {% endif %}

                    <hr>

                    <h6 class="fw-bold">Arena actuelle</h6>
                    <p class="mb-2">
                        <a href="{{ path('app_arena_show', { id: arena.id }) }}">
                            Arena #{{ arena.id }}
                        </a>
                    </p>

                </div>
            </div>
        </div>

    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_arena_show', { id: arena.id }) }}"
           class="btn btn-outline-secondary">
            ← Retour à l'arena
        </a>

        {% if is_granted('ROLE_ADMIN') or arena.owner == app.user %}
            <a href="{{ path('app_figure_edit', { id: figure.id }) }}"
               class="btn btn-primary">
                Modifier la figure
            </a>
        {% endif %}
    </div>

</div>
{% endblock %}
