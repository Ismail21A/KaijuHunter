{% extends 'base.html.twig' %}

{% block title %}{{ figure.name }} in Arena #{{ arena.id }}{% endblock %}

{% block body %}

<h1 class="h3 mb-3">{{ figure.name }} in Arena #{{ arena.id }}</h1>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">Details</div>
            <div class="card-body">
                <table class="table">
                    <tr><th>Figure Id</th><td>{{ figure.id }}</td></tr>
                    <tr><th>Name</th><td>{{ figure.name }}</td></tr>
                    <tr>
                        <th>Vitrine</th>
                        <td>
                            <a href="{{ path('vitrine_show', { id: figure.vitrine.id }) }}">
                                Vitrine #{{ figure.vitrine.id }}
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Arena</th>
                        <td>Arena #{{ arena.id }} — {{ arena.description }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-header">Image</div>
            <div class="card-body d-flex align-items-center justify-content-center">

                {% if figure.imageName %}
                    <img 
                        src="/uploads/figures/{{ figure.imageName }}"
                        alt="{{ figure.name }}"
                        class="img-fluid rounded"
                        style="max-height:260px;"
                    >
                {% else %}
                    <em class="text-muted">No image available</em>
                {% endif %}

            </div>
        </div>
    </div>
</div>

<a href="{{ path('app_arena_show', { id: arena.id }) }}" class="btn btn-secondary mt-3">
    ← Back to Arena
</a>

{% endblock %}
